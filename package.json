{
  "name": "anti-slop-generative-system",
  "version": "1.0.0",
  "description": "Claude Code orchestration system for generating distinctive, non-generic Next.js websites with Sanity.io",
  "type": "module",
  "scripts": {
    "validate": "npx ts-node scripts/validate-dna.ts",
    "palette": "npx ts-node scripts/generate-palette.ts",
    "palette:preview": "npx ts-node scripts/generate-palette.ts --hue 220 --mode split-complementary",
    "palette:json": "npx ts-node scripts/generate-palette.ts --json",
    "palette:css": "npx ts-node scripts/generate-palette.ts --css",
    "check:example": "npx ts-node scripts/validate-dna.ts examples/ceramics-studio.design-dna.json"
  },
  "dependencies": {
    "ajv": "^8.12.0",
    "chroma-js": "^2.4.2",
    "simplex-noise": "^4.0.1",
    "alea": "^1.0.1"
  },
  "devDependencies": {
    "@types/chroma-js": "^2.4.3",
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0",
    "ts-node": "^10.9.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "design-system",
    "generative-design",
    "next.js",
    "sanity",
    "tailwind",
    "claude-code",
    "ai-orchestration"
  ],
  "author": "Anti-Slop Design System",
  "license": "MIT"
}
